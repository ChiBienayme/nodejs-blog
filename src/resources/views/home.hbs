<div class="mt-4">
    <ul class="row d-flex justify-content-sm-center justify-content-lg-between">
        {{#each courses}}
                <li class="card col-sm-6 col-lg-3 pt-2 m-2">
                    <a href="/courses/{{this.slug}}">
                        <img
                            class="card-img-top"
                            src="{{this.image}}"
                            alt="{{this.name}}"
                        />
                    </a>
                    <div class="card-body">
                        <a href="/courses/{{this.slug}}">
                            <h5 class="card-title">
                                {{this.name}}
                            </h5>
                        </a>
                        <p class="card-text">
                            {{this.description}}
                        </p>
                        <a href="/courses/{{this.slug}}" class="btn btn-primary">Buy this course</a>
                    </div>
                </li>
        {{/each}}
    </div>
</div>